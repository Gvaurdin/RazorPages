@page
@model RazorPagesGeneral.Pages.Movies.DetailsModel

@if (Model.Shedule!.Movie is null)
{
    <h1>По вашему запросу не было найдено фильма</h1>
}
else
{
    <div class="container my-5">
        <div class="row">
            <div class="col-md-5">
                <div class="main-img">
                    <img class="img-fluid" src="@Model!.Shedule!.Movie.URL" alt="@Model.Shedule.Movie.Title" />
                </div>
            </div>
            <div class="col-md-7">
                <div class="main-description px-2">
                    <div class="text-bold">
                        Расписание : @Model.Shedule.StartFilm.ToString("HH:mm");
                    </div>
                    <div class="text-bold">
                        Название : @Model.Shedule.Movie.Title
                    </div>
                    <p> Описание : @Model.Shedule.Movie.Description</p>
                    <span> Стоимость билета @Model.Shedule.Cost₽</span>
                </div>
            </div>
        </div>
    </div>
}
